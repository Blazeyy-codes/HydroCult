{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the HydrateNow application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity (matches auth uid)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        }
      },
      "required": [
        "id"
      ]
    },
    "DailyGoal": {
      "title": "DailyGoal",
      "type": "object",
      "description": "Represents a user's daily water intake goal.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user this goal belongs to."
        },
        "amount": {
          "type": "number",
          "description": "The daily water intake goal in milliliters."
        }
      },
      "required": [
        "userId",
        "amount"
      ]
    },
    "WaterLog": {
      "title": "WaterLog",
      "type": "object",
      "description": "Represents a single instance of water intake logged by a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user this log belongs to."
        },
        "timestamp": {
          "type": "string",
          "description": "The date and time the water intake was logged.",
          "format": "date-time"
        },
        "amount": {
          "type": "number",
          "description": "The amount of water consumed in milliliters."
        },
        "drinkType": {
          "type": "string",
          "description": "The type of drink consumed."
        }
      },
      "required": [
        "userId",
        "timestamp",
        "amount",
        "drinkType"
      ]
    },
    "Reminder": {
        "title": "Reminder",
        "type": "object",
        "description": "Stores user's reminder preferences.",
        "properties": {
            "userId": { "type": "string" },
            "isEnabled": { "type": "boolean" },
            "mode": { "type": "string", "enum": ["interval", "custom"] },
            "interval": { "type": "number" },
            "customTimes": { "type": "array", "items": { "type": "string", "format": "time" } },
            "quietHoursEnabled": { "type": "boolean", "description": "Whether to silence notifications during quiet hours." },
            "quietHoursStart": { "type": "string", "format": "time", "description": "Start time for quiet hours." },
            "quietHoursEnd": { "type": "string", "format": "time", "description": "End time for quiet hours." }
        },
        "required": ["userId", "isEnabled", "mode"]
    },
    "NotificationPreferences": {
        "title": "NotificationPreferences",
        "type": "object",
        "description": "Stores user's notification toggles.",
        "properties": {
            "userId": { "type": "string" },
            "goalCompleted": { "type": "boolean" },
            "reminderAlerts": { "type": "boolean" },
            "streakMilestones": { "type": "boolean" },
            "missedGoalSummary": { "type": "boolean" }
        },
        "required": ["userId"]
    },
    "UserSettings": {
        "title": "UserSettings",
        "type": "object",
        "description": "Stores general user settings like theme and units.",
        "properties": {
            "userId": { "type": "string" },
            "units": { "type": "string", "enum": ["ml", "oz"] },
            "theme": { "type": "string", "enum": ["system", "light", "dark"] }
        },
        "required": ["userId"]
    },
    "Achievement": {
        "title": "Achievement",
        "type": "object",
        "description": "Represents a user's progress toward a specific achievement.",
        "properties": {
            "userId": { "type": "string" },
            "achievementId": { "type": "string", "description": "A unique identifier for the achievement (e.g., '3-day-streak')." },
            "unlockedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the achievement was unlocked." },
            "progress": { "type": "number", "description": "Current progress towards unlocking (if applicable)." }
        },
        "required": ["userId", "achievementId"]
    },
    "CustomDrink": {
        "title": "CustomDrink",
        "type": "object",
        "description": "Represents a user-defined drink type.",
        "properties": {
            "userId": { "type": "string" },
            "name": { "type": "string", "description": "The name of the custom drink." },
            "icon": { "type": "string", "description": "An emoji or icon identifier for the drink." },
            "hydrationFactor": { "type": "number", "description": "A multiplier for hydration effectiveness (-1 to 1)." }
        },
        "required": ["userId", "name", "hydrationFactor"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/users/{userId}/dailyGoals/{goalId}",
        "definition": {
          "schema": { "$ref": "#/entities/DailyGoal" },
          "description": "Stores daily water intake goals for each user."
        }
      },
      {
        "path": "/users/{userId}/waterLogs/{waterLogId}",
        "definition": {
          "schema": { "$ref": "#/entities/WaterLog" },
          "description": "Stores water intake logs for each user."
        }
      },
      {
        "path": "/users/{userId}/reminders/{reminderId}",
        "definition": {
          "schema": { "$ref": "#/entities/Reminder" },
          "description": "Stores reminder settings for a user."
        }
      },
      {
        "path": "/users/{userId}/notificationPreferences/{prefId}",
        "definition": {
          "schema": { "$ref": "#/entities/NotificationPreferences" },
          "description": "Stores notification preferences for a user."
        }
      },
      {
        "path": "/users/{userId}/settings/{settingsId}",
        "definition": {
            "schema": { "$ref": "#/entities/UserSettings" },
            "description": "Stores general app settings for a user."
        }
      },
      {
        "path": "/users/{userId}/achievements/{achievementId}",
        "definition": {
            "schema": { "$ref": "#/entities/Achievement" },
            "description": "Stores user's unlocked achievements and progress."
        }
      },
      {
        "path": "/users/{userId}/customDrinks/{drinkId}",
        "definition": {
            "schema": { "$ref": "#/entities/CustomDrink" },
            "description": "Stores user-created custom drink types."
        }
      }
    ]
  }
}
